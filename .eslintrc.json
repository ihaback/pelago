{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "simple-import-sort",
    "prettier"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  }
}